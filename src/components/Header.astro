---
import { APP_LINKS } from "src/constants";
import logo from "../assets/logo.png";
import Wrapper from "./ui/Wrapper.astro";
import Navigation from "./ui/Navigation.astro";
---

<div class="header">
  <Wrapper id="header">
    <div class="flex justify-between items-center py-2 relative">
      <img
        src={logo.src}
        alt="React Router"
        class="block w-[40px] h-[40px] sm:w-[60px] sm:h-[60px] self-center"
      />
      <div class="hidden lg:block">
        {
          APP_LINKS.map(({ href, text }) => (
            <a
              href={`#${href}`}
              class="text-foreground text-sm font-bold px-4 py-2"
            >
              {text}
            </a>
          ))
        }
      </div>
      <Navigation className="block lghidden" links={APP_LINKS} />
    </div>
  </Wrapper>
</div>

<style>
  .header {
    box-shadow: 0px 8px 10px -3px rgba(0, 0, 0, 0.1);
  }
</style>
